

//given r,h of a cylinder, calculate surface area

#include<stdio.h>
#include<math.h>
int main()
{
   const double pi=acos(-1.0);
   double r,h,s1,s2,s;
   scanf("%lf%lf",&r,&h);
   s1=pi*r*r;
   s2=2*pi*r*h;
   s=s1*2.0+s2;
   printf("%.3f\n",s);
}
input 
3.5 9
output 
274.889

//reverse a triple figure

//remain leading zero
#include<stdio.h>
#include<math.h>
int main()
{
   int n,m;
   scanf("%d",&n);
   m=(n%10)*100+(n/10%10)*10+(n/100);
   printf("%03d\n",m);
}
input
520
ouput
025
//leading zero is not allowed


#include<stdio.h>
#include<math.h>
int main()
{
   int n,m;
   scanf("%d",&n);
   m=(n%10)*100+(n/10%10)*10+(n/100);
   printf("%d\n",m);
}
input
520
output
